{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TCP Server",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/server/server",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/server",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",   // 可选，如果你配置了 tasks.json
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
